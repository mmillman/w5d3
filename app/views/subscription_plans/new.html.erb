<h1>New Subscription Plan for '<%= @subscription_plan.newspaper.title %>'</h1>

<% @subscription_plan.errors.full_messages.each do |error| %>
  <%= error %>!!
  <br>
  <br>
<% end %>

<!-- WRONG ON PURPOSE, SEEING WHAT HAPPENS IF ROUTING TO WRONG URL -->
<!-- Do I need ", url: "/subscription"" ? -->
<%= form_for(@subscription_plan, url: "/subscription") do |f| %>

  <%= f.label "Publication Frequency:" %>
  <%=
    f.select(
      :daily,
      [["Weekly", false], ["Daily", true]]
    )
  %>

  <br>
  <br>

  <%= f.label "Price:" %>
  <%= f.text_field :price %>

  <br>
  <br>

  <%= f.hidden_field :newspaper_id %>

  <%= f.submit "Create Subscription" %>

<% end %>